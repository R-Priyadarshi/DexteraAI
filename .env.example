# ============================================================
#  Dextera AI — Environment Configuration
# ============================================================

# ── Application ──
APP_NAME=Dextera AI
APP_VERSION=0.1.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ── Server (optional, only for backend/apps/api) ──
HOST=0.0.0.0
PORT=8000
WORKERS=1
CORS_ORIGINS=["*"]

# ── Model Paths ──
ONNX_MODEL_PATH=models/gesture_classifier.onnx
PYTORCH_MODEL_PATH=models/gesture_classifier.pt
DATASET_PATH=data/processed/dataset.joblib
TRAINING_DATA_DIR=data/raw

# ── Inference ──
CONFIDENCE_THRESHOLD=0.70
MIN_DETECTION_CONFIDENCE=0.7
MIN_TRACKING_CONFIDENCE=0.5

# ── MLflow ──
MLFLOW_TRACKING_URI=mlruns
MLFLOW_EXPERIMENT_NAME=dextera-ai

# ── Camera ──
CAMERA_INDEX=0
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30

# ── Privacy ──
ENABLE_CLOUD_INFERENCE=false
LOG_IMAGES=false
